<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_welcome_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical"
    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.nanosoft.planInternational.tracking.utility.custom_font.MyTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:paddingTop="10dp"
                android:text="Sponsored Child Benefit\n Tracking System"
                android:textColor="#0072ce"
                android:textSize="20dp"
                android:visibility="visible"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_marginTop="100dp"
                android:layout_height="wrap_content">

                <com.nanosoft.planInternational.tracking.utility.custom_font.MyEditText
                    android:id="@+id/usernameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:background="#00000000"
                    android:hint="Email"
                    android:letterSpacing="0.1"
                    android:textColor="#243c4b"
                    android:textColorHint="#9E9EAA"
                    android:textStyle="bold"
                    android:textSize="24sp"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.001dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#5B5B65"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                app:passwordToggleContentDescription="your pass word"
                app:passwordToggleEnabled="true"
                >

                <com.nanosoft.planInternational.tracking.utility.custom_font.MyEditText
                    android:id="@+id/passwordET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"

                    android:layout_weight="1"
                    android:background="#00000000"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:letterSpacing="0.1"
                    android:textColor="#243c4b"
                    android:textColorHint="#9E9EAA"
                    android:textStyle="bold"
                    android:textSize="24sp"/>


            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.001dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#5B5B65"/>


            <com.nanosoft.planInternational.tracking.utility.custom_font.MyTextView
                android:id="@+id/gotoProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:padding="17dp"
                android:text="Sign In"
                android:textStyle="bold"
                android:textColor="#ececf1"
                android:textSize="24sp"/>



            <Button
                android:id="@+id/btnCrash"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Force Crash!"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />


            <ImageView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/facobookbutton"
                android:visibility="gone"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"

                >


                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/logo002"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="Powered by\nPlan International Bangladesh"
                    android:textColor="#0072ce"
                    />


            </LinearLayout>

        </LinearLayout>

        <ImageView


            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/forapps001"
            android:visibility="visible"
            />
    </FrameLayout>


</LinearLayout>





